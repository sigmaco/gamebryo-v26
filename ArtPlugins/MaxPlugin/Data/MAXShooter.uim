[CONFIGURABLE USER-INTERFACE MAP]
["First Person Shooter"]
[MOUSE]
R_BUTTON = CAMERA_TUMBLE( 0.000000 , DX*1.000000 , DY*1.000000 , 0.000000 , 0.000000 , 0.000000 , 0.000000 )  CONTINUOUS  1 "Mouse Orbit" 
WHEEL = CAMERA_TRANSLATE( WHEEL*1.000000 , 0.000000 , 0.000000 , 0.000000 )  CONTINUOUS  0 "Wheel Move F/B" 
NONE = CAMERA_ROTATE( DY*0.500000 , DX*0.500000 , 0.000000 , 0.000000 )  CONTINUOUS  0 "Mouse-look" 

[KEYBOARD]
W = CAMERA_TRANSLATE(  1.000000 , 0.000000 , 0.000000 , 0.000000 )  CONTINUOUS  2 "Move Forward" 
A = CAMERA_TRANSLATE(  0.000000 , 0.000000 , -1.000000 , 0.000000 )  CONTINUOUS  2 "Move Left" 
S = CAMERA_TRANSLATE(  -1.000000 , 0.000000 , 0.000000 , 0.000000 )  CONTINUOUS  2 "Move Backward" 
D = CAMERA_TRANSLATE(  0.000000 , 0.000000 , 1.000000 , 0.000000 )  CONTINUOUS  2 "Move Right" 
Q = CAMERA_ROTATE(  0.000000 , -1.000000 , 0.000000 , 0.000000 )  CONTINUOUS  2 "Turn Left" 
E = CAMERA_ROTATE(  0.000000 , 1.000000 , 0.000000 , 0.000000 )  CONTINUOUS  2 "Turn Right" 
TAB = FRAMERATE(  )  SINGLE  1 "Toggle Frame Rate Indicator" 
1 = WIREFRAME(  )  SINGLE  1 "Toggle Wireframe Mode" 
2 = OVERDRAW(  )  SINGLE  1 "Toggle Overdraw" 
R = CAMERA_RESET(  )  SINGLE  1 "Reset Camera" 
SPACE = CAMERA_SWITCH(  1.000000 )  SINGLE  1 "Next Camera" 
' = SCREEN_CONSOLE(  )  SINGLE  1 "Toggle Screen Console" 
B = ADJUST_FRUSTUM(  -10.000000 , 0.000000 , 0.000000 )  CONTINUOUS  0 "Decrease Near Plane 10.0" 
G = ADJUST_FRUSTUM(  10.000000 , 0.000000 , 0.000000 )  CONTINUOUS  0 "Increase Near Plane 10.0" 
V = ADJUST_FRUSTUM(  0.000000 , -10.000000 , 0.000000 )  CONTINUOUS  0 "Decrease Far Plane 10.0" 
F = ADJUST_FRUSTUM(  0.000000 , 10.000000 , 0.000000 )  CONTINUOUS  0 "Increase Far Plane 10.0" 
F12 = CAMERA_CUT_TO(  11.000000 )  SINGLE  -1 "Cut To Camera 11" 
F11 = CAMERA_CUT_TO(  10.000000 )  SINGLE  -1 "Cut To Camera 10" 
F10 = CAMERA_CUT_TO(  9.000000 )  SINGLE  -1 "Cut To Camera 9" 
F9 = CAMERA_CUT_TO(  8.000000 )  SINGLE  -1 "Cut To Camera 8" 
F8 = CAMERA_CUT_TO(  7.000000 )  SINGLE  -1 "Cut To Camera 7" 
F7 = CAMERA_CUT_TO(  6.000000 )  SINGLE  -1 "Cut To Camera 6" 
F6 = CAMERA_CUT_TO(  5.000000 )  SINGLE  -1 "Cut To Camera 5" 
F5 = CAMERA_CUT_TO(  4.000000 )  SINGLE  -1 "Cut To Camera 4" 
F4 = CAMERA_CUT_TO(  3.000000 )  SINGLE  -1 "Cut To Camera 3" 
F3 = CAMERA_CUT_TO(  2.000000 )  SINGLE  -1 "Cut To Camera 2" 
F2 = CAMERA_CUT_TO(  1.000000 )  SINGLE  -1 "Cut To Camera 1" 
F1 = CAMERA_CUT_TO(  0.000000 )  SINGLE  -1 "Cut To Camera 0" 

[GAMEPAD]
L1 = CAMERA_SWITCH(  1.000000 )  SINGLE  1 "Next Camera" 
L2 = CAMERA_SWITCH(  -1.000000 )  SINGLE  1 "Previous Camera" 
R1 = SCALE_DEVICE_DELTA( 1.000000 )  SINGLE  2 "Scale GamePad 1.0" 
R2 = SCALE_DEVICE_DELTA( -1.000000 )  SINGLE  2 "Scale GamePad -1.0" 
ANALOG1(DIR_BOTH)  = CAMERA_TUMBLE( 0.000000 , X*5.000000 , Y*5.000000 , 0.000000 , 0.000000 , 0.000000 , 0.000000 )  CONTINUOUS  2 "GamePad Tumble" 
LUP = CAMERA_TRANSLATE( 1.000000 , 0.000000 , 0.000000 , 0.000000 )  CONTINUOUS  1 "Translate Forward" 
RDOWN = OVERDRAW(  )  SINGLE  1 "Toggle Overdraw" 
RUP = WIREFRAME(  )  SINGLE  1 "Toggle Wireframe" 
RRIGHT = FRAMERATE(  )  SINGLE  1 "Toggle Frame Rate Indicator" 
RLEFT = CAMERA_RESET(  )  SINGLE  1 "Reset Camera" 
ANALOG2(DIR_BOTH)  = CAMERA_ROTATE( Y*5.000000 , X*5.000000 , 0.000000 , 0.000000 )  CONTINUOUS  1 "GamePad Mouse Look" 
LDOWN = CAMERA_TRANSLATE( -1.000000 , 0.000000 , 0.000000 , 0.000000 )  CONTINUOUS  1 "Translate BackWard" 
LLEFT = CAMERA_TRANSLATE( 0.000000 , 0.000000 , -1.000000 , 0.000000 )  CONTINUOUS  1 "Translate Left" 
LRIGHT = CAMERA_TRANSLATE( 0.000000 , 0.000000 , 1.000000 , 0.000000 )  CONTINUOUS  1 "Translate Right" 
